{
  "extends": "@repo/tsconfig/nextjs.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "declarationMap": false,
    "declaration": false,
    "paths": {
      "contentlayer/generated": ["./.contentlayer/generated"],
      "#/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js",
    "postcss.config.js"
  ],
  "exclude": ["node_modules", ".next", ".contentlayer"]
}
