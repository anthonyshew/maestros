{
	"extends": ["//"],
	"pipeline": {
		"build": {
			"outputs": ["./next/**", "!./next/cache/**", ".contentlayer/**"],
			"dotEnv": [
				".env.production.local",
				".env.local",
				".env.production",
				".env"
			],
			"env": [
				"GH_CLIENT_ID",
				"GH_CLIENT_SECRET",
				"NEXTAUTH_SECRET",
				"NEXTAUTH_URL",
				"PORT",
				"POSTGRES_DATABASE",
				"POSTGRES_HOST",
				"POSTGRES_PASSWORD",
				"POSTGRES_PRISMA_URL",
				"POSTGRES_URL",
				"POSTGRES_URL_NON_POOLING",
				"VERCEL_URL"
			]
		},
		"dev": {
			"persistent": true,
			"dotEnv": [
				".env.development.local",
				".env.local",
				".env.development",
				".env"
			]
		}
	}
}
